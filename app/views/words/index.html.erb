<div class="row align-items-end">
<div class="col-xs-8">
    <h3><%= @dictionary.name %></h3>
</div>
<div class="col-xs-4">
    <%= button_to 'Delete', @dictionary, method: :delete, class: "btn btn-sm btn-danger" %>
</div>
</div>

<div class="row">
    <!-- URLを指定 -->
    <%= form_with(model: [@word], url: dictionary_words_path(@dictionary)) do |f| %>
        <div class="form-group">
            <%= f.label :name %>
            <%= f.text_area :name , class: "form-control"%>
        </div>
        <div class="form-group">
            <%= f.label :meaning %>
            <%= f.text_area :meaning , class: "form-control" %>
        </div>
        <div class="form-group center">
            <%= f.submit "add", class: "btn btn-primary" %>
        </div>
    <% end %>

    <div class="list-group center">
    <%= @words.each do |word| %>
        <%= link_to_review(word.name) %>
    <% end %>
    </div>


    
</div>

